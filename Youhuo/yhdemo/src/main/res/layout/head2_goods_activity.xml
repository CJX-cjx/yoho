<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:text="商品详情" />

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/line_goodsActivity"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="60dp" />

    <ListView
        android:paddingTop="@dimen/dp_10"
        android:id="@+id/lv_head2_goodsActivity"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/line_goodsActivity"
        android:layout_height="wrap_content">

    </ListView>

    <View
        android:layout_below="@+id/lv_head2_goodsActivity"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ccc"
        android:id="@+id/view_goodsActivity"/>
    <TextView
        android:layout_below="@+id/view_goodsActivity"
        android:text="店铺推荐"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="#222"
        android:id="@+id/dianputuijian"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</RelativeLayout>