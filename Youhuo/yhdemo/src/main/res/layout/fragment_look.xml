<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#2c2c2c"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/menu_guang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/navbar_menu"/>

        <com.flyco.tablayout.CommonTabLayout
            app:tl_indicator_style="NORMAL"
            android:layout_width="match_parent"
            android:id="@+id/ctl_guang"
            app:tl_textSelectColor="#fff"
            app:tl_textUnselectColor="#888"
            app:tl_indicator_color="#fff"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            app:tl_indicator_height="2dp"
            android:layout_height="match_parent">

        </com.flyco.tablayout.CommonTabLayout>

        <ImageView
            android:id="@+id/favorite_guang"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_heart_fill"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/fLayout_guang"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>