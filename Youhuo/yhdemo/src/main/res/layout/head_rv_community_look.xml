<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:id="@+id/banner_head_community"
        android:layout_height="150dp">
        
    </com.youth.banner.Banner>
    
    <android.support.v4.view.ViewPager
        android:background="#fff"
        android:clipToPadding="false"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_width="match_parent"
        android:id="@+id/vp_head_community"
        android:layout_below="@+id/banner_head_community"
        android:layout_height="150dp">

    </android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/img_head_community"
        android:layout_width="13.5dp"
        android:layout_below="@+id/vp_head_community"
        android:layout_marginLeft="20dp"
        android:background="@drawable/js_community_images_home_hot"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="18dp" />

    <TextView
        android:layout_below="@+id/vp_head_community"
        android:text="热门推荐"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/img_head_community"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_below="@+id/img_head_community"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>