<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#333"
        android:layout_height="50dp">

        <ImageView
            android:background="@drawable/community_shared_back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/back_brandActivity"/>
        
        <LinearLayout
            android:background="@drawable/bg_linear_brand_activity"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="120dp"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="35dp">
            
            <ImageView
                android:background="@drawable/navbar_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索店铺内潮品"
                android:textSize="15sp"
                android:textColor="#888"/>
        </LinearLayout>

        <ImageView
            android:layout_toLeftOf="@+id/imgShare_brandActivity"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/tabbar_category_highlighted"/>

        <ImageView
            android:id="@+id/imgShare_brandActivity"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/mine_memberbill_share_bg"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_width="match_parent"
        android:id="@+id/rv_brandActivity"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="商品分类"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="店铺简介"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>