<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#800"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/cancel_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/login_register_close1"/>
        <TextView
            android:background="@drawable/bg_tv_register"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="注册"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:paddingBottom="2dp"
            android:id="@+id/tvRegister"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:background="@drawable/login_head_default_bg"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:hint="用户名"
        android:id="@+id/username_login"
        android:layout_marginRight="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/username_login"
        android:layout_marginLeft="20dp"
        android:hint="密码"
        android:id="@+id/pwd_login"
        android:layout_marginRight="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:background="#888"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_below="@+id/pwd_login"
        android:layout_margin="20dp"
        android:id="@+id/btn_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wechat"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qq"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zhifubao"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weibo"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>