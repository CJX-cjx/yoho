<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="300dp">

    <RelativeLayout
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iconLookLook"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tvNameLookLook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iconLookLook"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:text="123"/>
            <TextView
                android:textSize="10sp"
                android:id="@+id/tvSignLookLook"
                android:text="123"
                android:layout_width="wrap_content"
                android:background="#0c0c0c"
                android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingTop="3dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="3dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_rv_look_look_vp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:id="@+id/tvCenterLookLook"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvTitle_looklookVp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_rv_look_look_vp"
            android:layout_marginTop="3dp"
            android:text="123"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/tvSmallTitle_looklookVp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle_looklookVp"
            android:layout_marginTop="3dp"
            android:text="123"
            android:textColor="#000"
            android:textSize="13sp"
            android:layout_marginBottom="3dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/tvSmallTitle_looklookVp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_time_looklookVp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="#888"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/js_guang_image_time_icon"/>
            <TextView
                android:id="@+id/tv_seeTime_looklookVp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:layout_centerHorizontal="true"
                android:textColor="#888"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/shared_view_icon"/>
            <ImageView
                android:background="@drawable/stroll_product_fav_normal"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/imgShare_looklookVp"
                android:layout_marginRight="@dimen/sp_15"
                android:id="@+id/imgFavorite_looklookVp"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/share"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/imgShare_looklookVp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#ccc"
        android:layout_height="@dimen/dp_10" />

</RelativeLayout>